InstallScript: <<
	PYTHONPATH=%p/lib/python%type_raw[python]/site-packages:%p/share/bootstrap-modules-python%type_pkg[python] %p/bin/python%type_raw[python] -m installer --destdir %d dist/*.whl
	mv %i/bin/wheel %i/bin/wheel-%type_pkg[python]
<<

PostInstScript: <<
	update-alternatives --install %p/bin/wheel wheel %p/bin/wheel-%type_pkg[python] %type_pkg[python]
<<

PreRmScript: <<
	if [ $1 != "upgrade" ]; then
		update-alternatives --remove wheel %p/bin/wheel-%type_pkg[python]
	fi
<<

