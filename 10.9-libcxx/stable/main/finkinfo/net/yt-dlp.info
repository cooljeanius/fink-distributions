PatchScript: <<
	sed 's|@FINK_PREFIX@|%p|g' < %{PatchFile} | patch -p1
<<
CompileScript: <<
  # force the script to be regenerated by make
  #rm %b/bin/%n
<<
InfoTest: <<
  TestScript: <<
    make \
        PYTHON=%p/bin/python3.10 \
        DESTDIR=%d \
        PREFIX=%p \
        MANDIR=%p/share/man \
        SYSCONFDIR=%p/etc \
        offlinetest || exit 2
  <<
<<
InstallScript: <<
  make \
      PYTHON=%p/bin/python3.10 \
      DESTDIR=%d \
      PREFIX=%p \
      MANDIR=%p/share/man \
      SYSCONFDIR=%p/etc \
      install
<<
